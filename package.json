{
    "name": "video-stats-backend",
    "version": "1.0.0",
    "description": "Video stats backend service",
    "main": "dist/bundle.js",
    "scripts": {
        "start": "node dist/bundle.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "esbuild src/server.ts --bundle --platform=node --target=node18 --outfile=dist/bundle.js",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "cheerio": "^1.0.0-rc.12"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/node": "^20.11.30",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2",
        "esbuild": "^0.20.2"
    }
}
